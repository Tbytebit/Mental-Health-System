<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.doctor.survey.mapper.SurveyRespondentsMapper">
    
    <resultMap type="SurveyRespondents" id="SurveyRespondentsResult">
        <result property="respondentsId"    column="respondents_id"    />
        <result property="questionnaireId"    column="questionnaire_id"    />
        <result property="submitTime"    column="submit_time"    />
        <result property="elapsedTime"    column="elapsed_time"    />
        <result property="source"    column="source"    />
        <result property="ip"    column="ip"    />
        <result property="address"    column="address"    />
        <result property="userName" column="user_name"/>
    </resultMap>

    <sql id="selectSurveyRespondentsVo">
        select respondents_id, questionnaire_id, submit_time, elapsed_time, source, ip, address,user_name from survey_respondents
    </sql>

    <select id="selectSurveyRespondentsList" parameterType="SurveyRespondents" resultMap="SurveyRespondentsResult">
        <include refid="selectSurveyRespondentsVo"/>
        <where>  
            <if test="questionnaireId != null  and questionnaireId != ''"> and questionnaire_id = #{questionnaireId}</if>
            <if test="submitTime != null "> and submit_time = #{submitTime}</if>
            <if test="elapsedTime != null  and elapsedTime != ''"> and elapsed_time = #{elapsedTime}</if>
            <if test="source != null "> and source = #{source}</if>
            <if test="ip != null  and ip != ''"> and ip = #{ip}</if>
            <if test="address != null  and address != ''"> and address = #{address}</if>
            <if test="userName != null and userName != ''">and user_name = #{userName}</if>
        </where>
    </select>
    
    <select id="selectSurveyRespondentsByRespondentsId" parameterType="String" resultMap="SurveyRespondentsResult">
        <include refid="selectSurveyRespondentsVo"/>
        where respondents_id = #{respondentsId}
    </select>

    <select id="selectSurveyRespondentsByRespondentsIds" parameterType="String" resultMap="SurveyRespondentsResult">
        <include refid="selectSurveyRespondentsVo" />
        where respondents_id in
        <foreach item="respondentsId" collection="array" open="(" separator="," close=")">
            #{respondentsId}
        </foreach>
    </select>

    <insert id="insertSurveyRespondents" parameterType="SurveyRespondents" useGeneratedKeys="true" keyProperty="respondentsId">
        insert into survey_respondents
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="questionnaireId != null and questionnaireId != ''">questionnaire_id,</if>
            <if test="submitTime != null">submit_time,</if>
            <if test="elapsedTime != null">elapsed_time,</if>
            <if test="source != null">source,</if>
            <if test="ip != null">ip,</if>
            <if test="address != null">address,</if>
            <if test="userName != null and userName != ''">user_name,</if>
         </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="questionnaireId != null and questionnaireId != ''">#{questionnaireId},</if>
            <if test="submitTime != null">#{submitTime},</if>
            <if test="elapsedTime != null">#{elapsedTime},</if>
            <if test="source != null">#{source},</if>
            <if test="ip != null">#{ip},</if>
            <if test="address != null">#{address},</if>
            <if test="userName != null and userName != ''">#{userName},</if>
         </trim>
    </insert>

    <update id="updateSurveyRespondents" parameterType="SurveyRespondents">
        update survey_respondents
        <trim prefix="SET" suffixOverrides=",">
            <if test="questionnaireId != null and questionnaireId != ''">questionnaire_id = #{questionnaireId},</if>
            <if test="submitTime != null">submit_time = #{submitTime},</if>
            <if test="elapsedTime != null">elapsed_time = #{elapsedTime},</if>
            <if test="source != null">source = #{source},</if>
            <if test="ip != null">ip = #{ip},</if>
            <if test="address != null">address = #{address},</if>
            <if test="userName != null">,user_name = #{userName}</if>
        </trim>
        where respondents_id = #{respondentsId}
    </update>

    <delete id="deleteSurveyRespondentsByRespondentsId" parameterType="String">
        delete from survey_respondents where respondents_id = #{respondentsId}
    </delete>

    <delete id="deleteSurveyRespondentsByRespondentsIds" parameterType="String">
        delete from survey_respondents where respondents_id in 
        <foreach item="respondentsId" collection="array" open="(" separator="," close=")">
            #{respondentsId}
        </foreach>
    </delete>
</mapper>