<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.doctor.survey.mapper.SurveyOptionMapper">
    
    <resultMap type="SurveyOption" id="SurveyOptionResult">
        <result property="optionId"    column="option_id"    />
        <result property="questionId"    column="question_id"    />
        <result property="optionText"    column="option_text"    />
        <result property="optionOrder"    column="option_order"    />
        <result property="createBy"    column="create_by"    />
        <result property="createTime"    column="create_time"    />
        <result property="updateBy"    column="update_by"    />
        <result property="updateTime"    column="update_time"    />
        <result property="remark"    column="remark"    />
    </resultMap>

    <sql id="selectSurveyOptionVo">
        select option_id, question_id, option_text, option_order, create_by, create_time, update_by, update_time, remark from survey_option
    </sql>

    <select id="selectSurveyOptionList" parameterType="SurveyOption" resultMap="SurveyOptionResult">
        <include refid="selectSurveyOptionVo"/>
        <where>  
            <if test="questionId != null  and questionId != ''"> and question_id = #{questionId}</if>
            <if test="optionText != null  and optionText != ''"> and option_text = #{optionText}</if>
            <if test="optionOrder != null  and optionOrder != ''"> and option_order = #{optionOrder}</if>
        </where>
    </select>
    
    <select id="selectSurveyOptionByOptionId" parameterType="String" resultMap="SurveyOptionResult">
        <include refid="selectSurveyOptionVo"/>
        where option_id = #{optionId}
    </select>
        
    <insert id="insertSurveyOption" parameterType="SurveyOption" useGeneratedKeys="true" keyProperty="optionId">
        insert into survey_option
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="questionId != null and questionId != ''">question_id,</if>
            <if test="optionText != null">option_text,</if>
            <if test="optionOrder != null">option_order,</if>
            <if test="createBy != null">create_by,</if>
            <if test="createTime != null">create_time,</if>
            <if test="updateBy != null">update_by,</if>
            <if test="updateTime != null">update_time,</if>
            <if test="remark != null">remark,</if>
         </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="questionId != null and questionId != ''">#{questionId},</if>
            <if test="optionText != null">#{optionText},</if>
            <if test="optionOrder != null">#{optionOrder},</if>
            <if test="createBy != null">#{createBy},</if>
            <if test="createTime != null">#{createTime},</if>
            <if test="updateBy != null">#{updateBy},</if>
            <if test="updateTime != null">#{updateTime},</if>
            <if test="remark != null">#{remark},</if>
         </trim>
    </insert>

    <update id="updateSurveyOption" parameterType="SurveyOption">
        update survey_option
        <trim prefix="SET" suffixOverrides=",">
            <if test="questionId != null and questionId != ''">question_id = #{questionId},</if>
            <if test="optionText != null">option_text = #{optionText},</if>
            <if test="optionOrder != null">option_order = #{optionOrder},</if>
            <if test="createBy != null">create_by = #{createBy},</if>
            <if test="createTime != null">create_time = #{createTime},</if>
            <if test="updateBy != null">update_by = #{updateBy},</if>
            <if test="updateTime != null">update_time = #{updateTime},</if>
            <if test="remark != null">remark = #{remark},</if>
        </trim>
        where option_id = #{optionId}
    </update>

    <delete id="deleteSurveyOptionByOptionId" parameterType="String">
        delete from survey_option where option_id = #{optionId}
    </delete>

    <delete id="deleteSurveyOptionByOptionIds" parameterType="String">
        delete from survey_option where option_id in 
        <foreach item="optionId" collection="array" open="(" separator="," close=")">
            #{optionId}
        </foreach>
    </delete>
</mapper>