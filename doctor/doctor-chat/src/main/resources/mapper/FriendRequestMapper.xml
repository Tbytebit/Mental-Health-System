<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.doctor.chat.mapper.FriendRequestMapper">
    
    <!-- 根据ID查询好友申请 -->
    <select id="selectById" resultType="com.doctor.chat.entity.FriendRequest">
        SELECT * FROM chat_friend_request
        WHERE request_id = #{id}
    </select>
    
    <!-- 基本查询 -->
    <select id="selectList" resultType="com.doctor.chat.entity.FriendRequest">
        SELECT * FROM chat_friend_request
        <where>
            <if test="ew != null and ew.sqlSegment != null and ew.sqlSegment != ''">
                ${ew.sqlSegment}
            </if>
        </where>
    </select>
    
    <!-- 统计记录数 -->
    <select id="selectCount" resultType="java.lang.Integer">
        SELECT COUNT(*) FROM chat_friend_request
        <where>
            <if test="ew != null and ew.sqlSegment != null and ew.sqlSegment != ''">
                ${ew.sqlSegment}
            </if>
        </where>
    </select>
    
    <!-- 添加好友申请 -->
    <insert id="insert" parameterType="com.doctor.chat.entity.FriendRequest" useGeneratedKeys="true" keyProperty="requestId">
        INSERT INTO chat_friend_request (from_user_id, to_user_id, message, status, create_time, update_time)
        VALUES (#{fromUserId}, #{toUserId}, #{message}, #{status}, #{createTime}, #{updateTime})
    </insert>
    
    <!-- 获取用户收到的好友申请列表 -->
    <select id="getReceivedRequests" resultType="com.doctor.chat.entity.FriendRequest">
        SELECT *
        FROM chat_friend_request
        WHERE to_user_id = #{userId}
        ORDER BY create_time DESC
    </select>
    
    <!-- 获取用户发送的好友申请列表 -->
    <select id="getSentRequests" resultType="com.doctor.chat.entity.FriendRequest">
        SELECT *
        FROM chat_friend_request
        WHERE from_user_id = #{userId}
        ORDER BY create_time DESC
    </select>
    
    <!-- 更新好友申请状态 -->
    <update id="updateRequestStatus">
        UPDATE chat_friend_request
        SET status = #{status}, update_time = NOW()
        WHERE request_id = #{requestId}
    </update>
    
    <!-- 根据ID更新好友申请 -->
    <update id="updateById" parameterType="com.doctor.chat.entity.FriendRequest">
        UPDATE chat_friend_request
        SET 
            from_user_id = #{et.fromUserId},
            to_user_id = #{et.toUserId},
            message = #{et.message},
            status = #{et.status},
            update_time = #{et.updateTime}
        WHERE request_id = #{et.requestId}
    </update>
    
</mapper> 