<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.doctor.web.mapper.NewsArticlesMapper">
    
    <resultMap type="NewsArticles" id="NewsArticlesResult">
        <result property="articleId"    column="article_id"    />
        <result property="title"    column="title"    />
        <result property="content"    column="content"    />
        <result property="views"    column="views"    />
        <result property="coverImage"    column="cover_image"    />
        <result property="status"    column="status"    />
        <result property="delFlag"    column="del_flag"    />
        <result property="createBy"    column="create_by"    />
        <result property="createTime"    column="create_time"    />
        <result property="updateBy"    column="update_by"    />
        <result property="updateTime"    column="update_time"    />
        <result property="remark"    column="remark"    />
    </resultMap>

    <sql id="selectNewsArticlesVo">
        select article_id, title, content, views, cover_image, status, del_flag, create_by, create_time, update_by, update_time, remark from t_news_articles
    </sql>

    <select id="selectNewsArticlesList" parameterType="NewsArticles" resultMap="NewsArticlesResult">
        <include refid="selectNewsArticlesVo"/>
        <where>
            del_flag = 0
            <if test="title != null  and title != ''"> and title like concat('%', #{title}, '%')</if>
            <if test="status != null "> and status = #{status}</if>
        </where>
        ORDER BY create_time DESC
    </select>
    
    <select id="selectNewsArticlesByArticleId" parameterType="Long" resultMap="NewsArticlesResult">
        <include refid="selectNewsArticlesVo"/>
        where article_id = #{articleId}
    </select>
        
    <insert id="insertNewsArticles" parameterType="NewsArticles" useGeneratedKeys="true" keyProperty="articleId">
        insert into t_news_articles
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="title != null and title != ''">title,</if>
            <if test="content != null and content != ''">content,</if>
            <if test="views != null">views,</if>
            <if test="coverImage != null">cover_image,</if>
            <if test="status != null">status,</if>
            <if test="delFlag != null">del_flag,</if>
            <if test="createBy != null">create_by,</if>
            <if test="createTime != null">create_time,</if>
            <if test="updateBy != null">update_by,</if>
            <if test="updateTime != null">update_time,</if>
            <if test="remark != null">remark,</if>
         </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="title != null and title != ''">#{title},</if>
            <if test="content != null and content != ''">#{content},</if>
            <if test="views != null">#{views},</if>
            <if test="coverImage != null">#{coverImage},</if>
            <if test="status != null">#{status},</if>
            <if test="delFlag != null">#{delFlag},</if>
            <if test="createBy != null">#{createBy},</if>
            <if test="createTime != null">#{createTime},</if>
            <if test="updateBy != null">#{updateBy},</if>
            <if test="updateTime != null">#{updateTime},</if>
            <if test="remark != null">#{remark},</if>
         </trim>
    </insert>

    <update id="updateNewsArticles" parameterType="NewsArticles">
        update t_news_articles
        <trim prefix="SET" suffixOverrides=",">
            <if test="title != null and title != ''">title = #{title},</if>
            <if test="content != null and content != ''">content = #{content},</if>
            <if test="views != null">views = #{views},</if>
            <if test="coverImage != null">cover_image = #{coverImage},</if>
            <if test="status != null">status = #{status},</if>
            <if test="delFlag != null">del_flag = #{delFlag},</if>
            <if test="createBy != null">create_by = #{createBy},</if>
            <if test="createTime != null">create_time = #{createTime},</if>
            <if test="updateBy != null">update_by = #{updateBy},</if>
            <if test="updateTime != null">update_time = #{updateTime},</if>
            <if test="remark != null">remark = #{remark},</if>
        </trim>
        where article_id = #{articleId}
    </update>

    <delete id="deleteNewsArticlesByArticleId" parameterType="Long">
        delete from t_news_articles where article_id = #{articleId}
    </delete>

    <delete id="deleteNewsArticlesByArticleIds" parameterType="String">
        update t_news_articles  set del_flag = 2 where article_id in
        <foreach item="articleId" collection="array" open="(" separator="," close=")">
            #{articleId}
        </foreach>
    </delete>
</mapper>