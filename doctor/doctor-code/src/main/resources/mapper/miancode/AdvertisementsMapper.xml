<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.doctor.web.mapper.AdvertisementsMapper">
    
    <resultMap type="com.doctor.web.domain.Advertisements" id="AdvertisementsResult">
        <result property="adId"    column="ad_id"    />
        <result property="title"    column="title"    />
        <result property="content"    column="content"    />
        <result property="link"    column="link"    />
        <result property="startTime"    column="start_time"    />
        <result property="expirationTime"    column="expiration_time"    />
        <result property="clicks"    column="clicks"    />
        <result property="status"    column="status"    />
        <result property="imageUrl"    column="image_url"    />
        <result property="delFlag"    column="del_flag"    />
        <result property="createBy"    column="create_by"    />
        <result property="createTime"    column="create_time"    />
        <result property="updateBy"    column="update_by"    />
        <result property="updateTime"    column="update_time"    />
        <result property="remark"    column="remark"    />
    </resultMap>

    <sql id="selectAdvertisementsVo">
        select ad_id, title, content, link, start_time, expiration_time, clicks, status, image_url, del_flag, create_by, create_time, update_by, update_time, remark from t_advertisements
    </sql>

    <select id="selectAdvertisementsList" parameterType="com.doctor.web.domain.Advertisements" resultMap="AdvertisementsResult">
        <include refid="selectAdvertisementsVo"/>
        <where>
            del_flag = 0
            <if test="title != null and title != ''">    and title LIKE CONCAT('%', #{title}, '%')  </if>
            <if test="content != null  and content != ''"> and content = #{content}</if>
            <if test="link != null  and link != ''"> and link = #{link}</if>
            <if test="startTime != null "> and start_time = #{startTime}</if>
            <if test="expirationTime != null "> and expiration_time = #{expirationTime}</if>
            <if test="clicks != null "> and clicks = #{clicks}</if>
            <if test="status != null "> and status = #{status}</if>
            <if test="imageUrl != null  and imageUrl != ''"> and image_url = #{imageUrl}</if>
        </where>
        ORDER BY create_time DESC
    </select>
    
    <select id="selectAdvertisementsByAdId" parameterType="Long" resultMap="AdvertisementsResult">
        <include refid="selectAdvertisementsVo"/>
        where ad_id = #{adId}
    </select>
    <select id="getAdCarousel" resultType="com.doctor.web.domain.Advertisements">
        select * from t_advertisements WHERE start_time  &lt; NOW() AND expiration_time > NOW() AND del_flag = 0
    </select>

    <insert id="insertAdvertisements" parameterType="com.doctor.web.domain.Advertisements" useGeneratedKeys="true" keyProperty="adId">
        insert into t_advertisements
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="title != null and title != ''">title,</if>
            <if test="content != null and content != ''">content,</if>
            <if test="link != null and link != ''">link,</if>
            <if test="startTime != null">start_time,</if>
            <if test="expirationTime != null">expiration_time,</if>
            <if test="clicks != null">clicks,</if>
            <if test="status != null">status,</if>
            <if test="imageUrl != null">image_url,</if>
            <if test="delFlag != null">del_flag,</if>
            <if test="createBy != null">create_by,</if>
            <if test="createTime != null">create_time,</if>
            <if test="updateBy != null">update_by,</if>
            <if test="updateTime != null">update_time,</if>
            <if test="remark != null">remark,</if>
         </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="title != null and title != ''">#{title},</if>
            <if test="content != null and content != ''">#{content},</if>
            <if test="link != null and link != ''">#{link},</if>
            <if test="startTime != null">#{startTime},</if>
            <if test="expirationTime != null">#{expirationTime},</if>
            <if test="clicks != null">#{clicks},</if>
            <if test="status != null">#{status},</if>
            <if test="imageUrl != null">#{imageUrl},</if>
            <if test="delFlag != null">#{delFlag},</if>
            <if test="createBy != null">#{createBy},</if>
            <if test="createTime != null">#{createTime},</if>
            <if test="updateBy != null">#{updateBy},</if>
            <if test="updateTime != null">#{updateTime},</if>
            <if test="remark != null">#{remark},</if>
         </trim>
    </insert>

    <update id="updateAdvertisements" parameterType="com.doctor.web.domain.Advertisements">
        update t_advertisements
        <trim prefix="SET" suffixOverrides=",">
            <if test="title != null and title != ''">title = #{title},</if>
            <if test="content != null and content != ''">content = #{content},</if>
            <if test="link != null and link != ''">link = #{link},</if>
            <if test="startTime != null">start_time = #{startTime},</if>
            <if test="expirationTime != null">expiration_time = #{expirationTime},</if>
            <if test="clicks != null">clicks = #{clicks},</if>
            <if test="status != null">status = #{status},</if>
            <if test="imageUrl != null">image_url = #{imageUrl},</if>
            <if test="delFlag != null">del_flag = #{delFlag},</if>
            <if test="createBy != null">create_by = #{createBy},</if>
            <if test="createTime != null">create_time = #{createTime},</if>
            <if test="updateBy != null">update_by = #{updateBy},</if>
            <if test="updateTime != null">update_time = #{updateTime},</if>
            <if test="remark != null">remark = #{remark},</if>
        </trim>
        where ad_id = #{adId}
    </update>

    <delete id="deleteAdvertisementsByAdId" parameterType="Long">
        delete from t_advertisements where ad_id = #{adId}
    </delete>

    <update id="deleteAdvertisementsByAdIds" parameterType="String">
        update t_advertisements  set del_flag = 2 where ad_id in
        <foreach item="adId" collection="array" open="(" separator="," close=")">
            #{adId}
        </foreach>
    </update>
</mapper>