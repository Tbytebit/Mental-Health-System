<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.doctor.forum.mapper.ForumCategoryMapper">
    
    <resultMap type="com.doctor.forum.domain.entity.ForumCategory" id="ForumCategoryResult">
        <id property="id" column="id"/>
        <result property="name" column="name"/>
        <result property="description" column="description"/>
        <result property="orderNum" column="order_num"/>
        <result property="delFlag" column="del_flag"/>
        <result property="createBy" column="create_by"/>
        <result property="createTime" column="create_time"/>
        <result property="updateBy" column="update_by"/>
        <result property="updateTime" column="update_time"/>
        <result property="remark" column="remark"/>
    </resultMap>
    
    <sql id="selectForumCategoryVo">
        select id, name, description, order_num, del_flag, create_by, create_time, 
        update_by, update_time, remark
        from forum_category
    </sql>
    
    <select id="selectForumCategoryList" parameterType="com.doctor.forum.domain.entity.ForumCategory" resultMap="ForumCategoryResult">
        <include refid="selectForumCategoryVo"/>
        <where>
            del_flag = '0'
            <if test="name != null and name != ''">
                AND name like concat('%', #{name}, '%')
            </if>
            <if test="description != null and description != ''">
                AND description like concat('%', #{description}, '%')
            </if>
        </where>
        order by order_num
    </select>
    
    <select id="selectForumCategoryAll" resultMap="ForumCategoryResult">
        <include refid="selectForumCategoryVo"/>
        where del_flag = '0' order by order_num
    </select>
    
    <select id="selectForumCategoryById" parameterType="String" resultMap="ForumCategoryResult">
        <include refid="selectForumCategoryVo"/>
        where id = #{id} and del_flag = '0'
    </select>
    
    <insert id="insertForumCategory" parameterType="com.doctor.forum.domain.entity.ForumCategory">
        insert into forum_category (
            id,
            <if test="name != null and name != ''">name,</if>
            <if test="description != null and description != ''">description,</if>
            <if test="orderNum != null">order_num,</if>
            <if test="createBy != null and createBy != ''">create_by,</if>
            <if test="remark != null and remark != ''">remark,</if>
            create_time
        ) values (
            #{id},
            <if test="name != null and name != ''">#{name},</if>
            <if test="description != null and description != ''">#{description},</if>
            <if test="orderNum != null">#{orderNum},</if>
            <if test="createBy != null and createBy != ''">#{createBy},</if>
            <if test="remark != null and remark != ''">#{remark},</if>
            sysdate()
        )
    </insert>
    
    <update id="updateForumCategory" parameterType="com.doctor.forum.domain.entity.ForumCategory">
        update forum_category
        <set>
            <if test="name != null and name != ''">name = #{name},</if>
            <if test="description != null and description != ''">description = #{description},</if>
            <if test="orderNum != null">order_num = #{orderNum},</if>
            <if test="delFlag != null and delFlag != ''">del_flag = #{delFlag},</if>
            <if test="updateBy != null and updateBy != ''">update_by = #{updateBy},</if>
            <if test="remark != null">remark = #{remark},</if>
            update_time = sysdate()
        </set>
        where id = #{id}
    </update>
    
    <delete id="deleteForumCategoryById" parameterType="String">
        update forum_category set del_flag = '1' where id = #{id}
    </delete>
    
    <delete id="deleteForumCategoryByIds" parameterType="String">
        update forum_category set del_flag = '1' where id in 
        <foreach collection="array" item="id" open="(" separator="," close=")">
            #{id}
        </foreach>
    </delete>
    
</mapper> 